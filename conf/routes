# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#GET     /login           controllers.Application.login
#POST     /login           controllers.Application.loginPost

# OpenID
GET     /login                          controllers.Application.login
POST	/login							controllers.Application.loginPost
GET     /logout                         controllers.Application.logout

# Plugin-handled login
# OpenID
GET     /openid                         controllers.OpenIDLoginHandler.openIDCallback
POST	/openid							controllers.OpenIDLoginHandler.loginPost

# Mozilla Persona
POST	/persona						controllers.PersonaLoginHandler.loginPost

GET     /logout           controllers.Application.logout
POST     /logout           controllers.Application.logout

GET		/test			  controllers.Application.test

# Home page
GET     /                           controllers.Application.index
GET     /documentaryUnit/list           controllers.DocumentaryUnits.list(offset: Int ?= 0, limit: Int ?=20)
GET     /documentaryUnit/show/:id       controllers.DocumentaryUnits.get(id: String)
GET     /documentaryUnit/json/:id       controllers.DocumentaryUnits.getJson(id: String)
GET     /documentaryUnit/delete/:id     controllers.DocumentaryUnits.delete(id: String)
POST    /documentaryUnit/delete/:id     controllers.DocumentaryUnits.deletePost(id: String)
GET     /documentaryUnit/update/:id     controllers.DocumentaryUnits.update(id: String)
POST    /documentaryUnit/update/:id     controllers.DocumentaryUnits.updatePost(id: String)
GET     /documentaryUnit/create/:id     controllers.DocumentaryUnits.docCreate(id: String)
POST    /documentaryUnit/create/:id     controllers.DocumentaryUnits.docCreatePost(id: String)

GET     /userProfile/list           controllers.UserProfiles.list(offset: Int ?= 0, limit: Int ?=20)
GET     /userProfile/show/:id       controllers.UserProfiles.get(id: String)
GET     /userProfile/json/:id       controllers.UserProfiles.getJson(id: String)
GET     /userProfile/create         controllers.UserProfiles.create
POST    /userProfile/create         controllers.UserProfiles.createPost
GET     /userProfile/delete/:id     controllers.UserProfiles.delete(id: String)
POST    /userProfile/delete/:id     controllers.UserProfiles.deletePost(id: String)
GET     /userProfile/update/:id     controllers.UserProfiles.update(id: String)
POST    /userProfile/update/:id     controllers.UserProfiles.updatePost(id: String)
GET     /userProfile/permissions/:id     controllers.UserProfiles.permissions(id: String)
POST    /userProfile/permissions/:id     controllers.UserProfiles.permissionsPost(id: String)

GET     /group/list           controllers.Groups.list(offset: Int ?= 0, limit: Int ?=20)
GET     /group/show/:id       controllers.Groups.get(id: String)
GET     /group/json/:id       controllers.Groups.getJson(id: String)
GET     /group/create         controllers.Groups.create
POST    /group/create         controllers.Groups.createPost
GET     /group/delete/:id     controllers.Groups.delete(id: String)
POST    /group/delete/:id     controllers.Groups.deletePost(id: String)
GET     /group/update/:id     controllers.Groups.update(id: String)
POST    /group/update/:id     controllers.Groups.updatePost(id: String)
GET     /group/permissions/:id     controllers.Groups.permissions(id: String)
POST    /group/permissions/:id     controllers.Groups.permissionsPost(id: String)

GET     /agent/list           controllers.Agents.list(offset: Int ?= 0, limit: Int ?=20)
GET     /agent/show/:id       controllers.Agents.get(id: String)
GET     /agent/json/:id       controllers.Agents.getJson(id: String)
GET     /agent/create         controllers.Agents.create
POST    /agent/create         controllers.Agents.createPost
GET     /agent/delete/:id     controllers.Agents.delete(id: String)
POST    /agent/delete/:id     controllers.Agents.deletePost(id: String)
GET     /agent/update/:id     controllers.Agents.update(id: String)
POST    /agent/update/:id     controllers.Agents.updatePost(id: String)
GET     /agent/create/:id     controllers.Agents.docCreate(id: String)
POST    /agent/create/:id     controllers.Agents.docCreatePost(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


