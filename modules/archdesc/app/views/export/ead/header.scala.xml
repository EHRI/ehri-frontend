@(title: String, repo: Repository, trees: Seq[utils.ead.DocTree])(implicit lang: Lang)

<eadheader langencoding="iso639-2b" countryencoding="iso3166-1" dateencoding="iso8601" repositoryencoding="iso15511" scriptencoding="iso15924" relatedencoding="DC">
    @trees.headOption.map(_.id).map { id =>
    <eadid>@id</eadid>
    }
    <filedesc>
        <titlestmt>
            <titleproper>
                @title
            </titleproper>
            <author>

            </author>
        </titlestmt>
        @publicationStatement(repo)
    </filedesc>
    @profileDesc(repo)
</eadheader>